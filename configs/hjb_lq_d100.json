{
  "equation_config": {
    "_comment": "HJB equation in PNAS paper doi.org/10.1073/pnas.1718942115",
    "eqn_name": "HJBLQ",
    "total_time": 1.0,
    "dim": 100,
    "num_time_interval": 20
  },
  "network_config": {
    "use_bn_input": true,
    "use_bn_hidden": false,
    "use_bn_output": false,
